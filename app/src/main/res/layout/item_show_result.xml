<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/show_image_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/show_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingEnd="16dp"
        android:paddingStart="72dp"
        android:textColor="@color/primary_text"
        android:textSize="16sp"
        android:layout_toStartOf="@id/follow_show_frame_layout"
        android:layout_marginEnd="16dp"
        tools:text="Show Name here" />

    <TextView
        android:id="@+id/show_network_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/show_name_text_view"
        android:layout_marginBottom="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingEnd="16dp"
        android:paddingStart="72dp"
        android:layout_alignEnd="@id/show_name_text_view"
        tools:text="Show network" />

    <FrameLayout
        android:id="@+id/follow_show_frame_layout"
        android:layout_width="56dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true">

        <ImageButton
            android:id="@+id/follow_show_image_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="?attr/selectableItemBackground"
            style="@style/SelectableItemBackground"
            android:src="@drawable/ic_add_white_24px"
            android:tint="@color/colorAccent"/>
    </FrameLayout>


</RelativeLayout>